<!DOCTYPE html>
<html lang="en">

<head>
  <title>Search Results</title>
</head>

<body>
  <div>
    <h2>Search results for:</h2>
    {{#if search.title}}
    <span>Title: {{search.title}}</span>
    {{/if}}

    {{#if search.year}}
    <span>Year: {{search.year}}</span>
    {{/if}}

    {{#if search.starring}}
    <span>Starring: {{search.starring}}</span>
    {{/if}}
  </div>
  {{#if movies}}
  {{#each movies}}
  <div>
    <p>Title: {{this.title}}</p>
    <p>Year: {{this.year}}</p>
    <p>Starring:</p>
    <ul>
      {{#each this.cast}}
      <li>{{this}}</li>
      {{/each}}
    </ul>

  </div>
  {{/each}}

  {{else}}
  <p>No results found</p>
  {{/if}}

  <a href="/">Return to Search</a>


</body>

</html>